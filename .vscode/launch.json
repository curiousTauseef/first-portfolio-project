{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.0.1",
  "compounds": [
    {
      "name": "Development",
      "configurations": [
        "react-dev-server",
        "react-storybook"
      ],
    },
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "react-dev-server",
      "runtimeArgs": [],
      "cwd": "${workspaceFolder}/",
      "program": "${workspaceRoot}/node_modules/react-scripts/bin/react-scripts.js",
      "args": [
        "start"
      ],
      "outputCapture": "std"
    },
    {
      "name": "react-storybook",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/",
      "program": "${workspaceRoot}/node_modules/.bin/start-storybook",
      "args": [
        "-p",
        "6006"
      ],
      "stopOnEntry": false,
      "runtimeArgs": [
        "--nolazy"
      ],
      "sourceMaps": false
    },
  ],
  "inputs": [
    {
      "id": "specPath",
      "type": "promptString",
      "description": "The test spec to run"
    }
  ]
}